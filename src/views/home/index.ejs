<!doctype html>
<html lang="pt-br">
 
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    
    <title>Q-benefícios</title>
</head>

<body>

    <div class="logo">
        <img src="images/logo_qbeneficios.jpeg" alt="" class="logo_main">
    </div>

    <div class="content_home">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <div class="card">
                        <div class="card-body">
                            <canvas id="chLine"></canvas>
                        </div>
                    </div>
                </div>
            </div>     
        </div>
    </div>
    
    <div class="wrapper">
        <div class="row">
            <% if(vector_roles.length > 0) { %>
                <% for(var i = 0; i < vector_roles.length; i++) { %>
                    <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="text-muted">Cargo</h5>
                                <div class="metric-value d-inline-block">
                                    <h1 class="mb-1"><%= vector_roles[i].name %></h1>
                                </div>
                                <div class="metric-label d-inline-block float-right text-success font-weight-bold">
                                    <span><i class="fa fa-fw fa-arrow-up"></i></span><span></span>
                                </div>
                            </div>
                            <div id="sparkline-revenue"></div>
                        </div>
                    </div>
                <% } %>
            <% } else { %>
                <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="text-muted">Aviso</h5>
                            <div class="metric-value d-inline-block">
                                <h1 class="mb-1">Não tem cargos cadastrados no sistema !!!</h1>
                            </div>
                            <div class="metric-label d-inline-block float-right text-success font-weight-bold">
                                <span><i class="fa fa-fw fa-arrow-up"></i></span><span></span>
                            </div>
                        </div>
                        <div id="sparkline-revenue"></div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <div class="fab"  ontouchstart="">
        <a href="register_role"><button type="button" class="main"></button></a>
    </div>

    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/Chart.bundle.js"></script>
    <script src="js/bootstrap.bundle.js"></script>
    <script>
        var chartData = {
            labels: ["S", "M", "T", "W", "T", "F", "S"],
            datasets: [{
                data: [589, 445, 483, 503, 689, 692, 634],
            },
            {
                data: [639, 465, 493, 478, 589, 632, 674],
            }]
        };

        var chLine = document.getElementById("chLine");
        if (chLine) {
            new Chart(chLine, {
                type: 'line',
                data: chartData,
                options: {
                    scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: false
                        }
                    }]
                    },
                    legend: {
                        display: false
                    }
                }
            });
        }
    </script>
</body>
 
</html>