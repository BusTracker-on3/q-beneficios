    <div class="wrapper">
        <div class="row">
            <% if(vector_roles.length > 0) { %>
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <table class="table table-hover">
                        <thead class="table-danger">
                          <tr>
                            <th scope="col">ID</th>
                            <th scope="col">NOME</th>
                            <th scope="col">SALÁRIO</th>
                            <th scope="col">ATIVIDADE 1</th>
                            <th scope="col">BENEFÍCIO 1</th>
                            <th scope="col">ATIVIDADE 2</th>
                            <th scope="col">BENEFÍCIO 2</th>
                            <th scope="col">ATIVIDADE 3</th>
                            <th scope="col">BENEFÍCIO 3</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                          </tr>
                        </thead>
                        <tbody>
                            <% for(var i = 0; i < vector_roles.length; i++) { %>
                                <tr>
                                    <th scope="row"><%= i + 1 %></th>
                                    <td><%= vector_roles[i].name %></td>
                                    <td><%= vector_roles[i].salary %></td>
                                    <td><%= vector_roles[i].main_task_one %></td>
                                    <td><%= vector_roles[i].benefit_one %></td>
                                    <% if(vector_roles[i].main_task_two != '') { %>
                                        <td><%= vector_roles[i].main_task_two %></td>
                                    <% } %>
                                    <% if(vector_roles[i].benefit_two != '') { %>
                                        <td><%= vector_roles[i].benefit_two %></td>
                                    <% } %>
                                    <% if(vector_roles[i].main_task_three != '') { %>
                                        <td><%= vector_roles[i].main_task_three %></td>
                                    <% } %>
                                    <% if(vector_roles[i].benefit_three != '') { %>
                                        <td><%= vector_roles[i].benefit_three %></td>
                                    <% } %>
                                    <td><a href="/update_role?id=<%= vector_roles[i]._id %>">
                                        <img src="images/update_icon.png" class="icon" alt="Atualizar"/>
                                    </a></td>
                                    <td><a href="/delete_role?id=<%= vector_roles[i]._id %>">
                                        <img src="images/delete_icon.jpeg" class="icon" alt="Remover">
                                    </a></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </div>

